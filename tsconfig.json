{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM","DOM.Iterable","ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "src/middleware.ts",
    "src/app",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
